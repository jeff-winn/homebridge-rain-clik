{
  "name": "homebridge-veml7700-sensor",
  "version": "2.3.0",
  "displayName": "Homebridge VEML7700 Sensor",
  "description": "An accessory plugin for the Adafruit VEML7700 lux sensor.",
  "license": "MIT",
  "homepage": "https://github.com/jeff-winn/homebridge-veml7700-sensor",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./build",
    "rebuild": "npm run clean && npm run build",
    "build": "tsc",
    "test": "jest --ci",
    "release": "tsc --project tsconfig.release.json && jest -c jest.release.config.ts"
  },
  "jestSonar": {
    "reportPath": "build",
    "reportFile": "test-report.xml"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "config.schema.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jeff-winn/homebridge-veml7700-sensor.git"
  },
  "bugs": {
    "url": "https://github.com/jeff-winn/homebridge-veml7700-sensor/issues"
  },
  "engines": {
    "node": "^18.20.4 || ^20.16.0",
    "homebridge": "^1.8.0 || ^2.0.0-beta.0"
  },
  "keywords": [
    "homebridge-plugin",
    "veml7700"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "node-fetch": "^2.6.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.2",
    "@types/node-fetch": "^2.6.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.57.0",
    "homebridge": "^2.0.0-beta.0",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "moq.ts": "^10.0.8",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
